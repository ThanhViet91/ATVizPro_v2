<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".ui.activities.ReactCamActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Title_Box_White"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="React Cam" />

        <ImageView
            android:id="@+id/img_btn_back_header"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_back_header_24" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/screenVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/control_reactCam"
        android:layout_below="@id/header"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
        <com.examples.atvizpro.ui.ZVideoView
            android:id="@+id/video_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        </FrameLayout>

    </RelativeLayout>

    <!--    <com.examples.atvizpro.ui.utils.AspectFrameLayout-->
    <!--        android:id="@+id/frame_video"-->
    <!--        android:layout_below="@id/header"-->
    <!--        android:layout_above="@id/control_reactCam"-->
    <!--        android:layout_marginTop="30dp"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        android:background="@color/black"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent">-->

    <!--       -->
    <!--        <VideoView-->

    <!--            android:id="@+id/video_main"-->
    <!--            android:focusable="false"-->
    <!--            android:layout_gravity="center"-->
    <!--            android:focusableInTouchMode="false"-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"/>-->
    <!--    </com.examples.atvizpro.ui.utils.AspectFrameLayout>-->


    <RelativeLayout
        android:id="@+id/control_reactCam"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/img_btn_react_cam"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/seekbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_play_react" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/saveReact"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/seekbar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/BLUE"
            android:background="@drawable/ic_tick" />
    </RelativeLayout>


</RelativeLayout>
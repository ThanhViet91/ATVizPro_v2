<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_home">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="20dp">


        <TextView
            style="@style/Title_Box_White"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/how_to_record_your_screen" />

        <TextView
            android:id="@+id/img_back_fb_slider"
            android:layout_toEndOf="@id/title"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            style="@style/Title_Box_White"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/skip" />

<!--        <ImageView-->
<!--            android:id="@+id/img_back_fb_slider"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:paddingStart="10dp"-->
<!--            android:src="@drawable/ic_back_header_24" />-->
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_decs"
        style="@style/Text_Description_White_15_400"
        android:textSize="22sp"
        android:gravity="center"
        android:textFontWeight="600"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Step 1:...."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="p" />
    <FrameLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_img_facebook"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circle_indicator_facebook"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="bottom|center"
            app:ci_drawable_unselected="@drawable/un_select_img"
            app:ci_drawable="@drawable/select_img"
            app:ci_height="8dp"
            app:ci_width="8dp"
            tools:ignore="MissingConstraints" />

    </FrameLayout>
    <TextView
        android:id="@+id/btn_continue_facebook_livestreaming"
        android:layout_marginTop="10dp"
        android:text="@string/continue_"
        android:textColor="#FF694C"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/custom_btn"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/title"
            style="@style/Title_Box_White"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/how_to_record_your_screen" />

        <TextView
            android:id="@+id/img_back_fb_slider"
            style="@style/Title_Box_White"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/title"
            android:gravity="center"
            android:text="@string/skip"
            android:textSize="18sp" />

    </RelativeLayout>
    <TextView
        android:layout_below="@id/header"
        android:id="@+id/tv_decs"
        android:layout_centerHorizontal="true"
        style="@style/Text_Description_White_15_400"
        android:textSize="22sp"
        android:gravity="center"
        android:textFontWeight="600"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Step 1:...."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="p" />
    <FrameLayout
        android:id="@+id/images"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_decs"
        android:layout_above="@id/btn_continue_"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_img_facebook"
            android:paddingEnd="36dp"
            android:paddingStart="36dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circle_indicator_facebook"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom|center"
            app:ci_drawable_unselected="@drawable/un_select_img"
            app:ci_drawable="@drawable/select_img"
            app:ci_height="8dp"
            app:ci_width="8dp"
            tools:ignore="MissingConstraints" />

    </FrameLayout>
    <TextView
        android:layout_above="@id/adView"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_continue_"
        android:layout_marginTop="10dp"
        android:text="@string/continue_"
        android:textColor="#FF694C"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/custom_btn"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.gms.ads.AdView
        android:visibility="gone"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_line"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>